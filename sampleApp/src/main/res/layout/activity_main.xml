<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vanilla.hyx.sample.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update apk!"/>

    <Button
        android:id="@+id/update_notify"
        android:layout_below="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update notify!"/>

    <Button
        android:id="@+id/update_scheduled"
        android:layout_below="@+id/update_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update scheduled!"/>

    <Button
        android:id="@+id/update_cancel_scheduled"
        android:layout_below="@+id/update_scheduled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update cancel!"/>

    <Button
        android:id="@+id/update_destroy"
        android:layout_below="@+id/update_cancel_scheduled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="release manager"/>
</RelativeLayout>
